<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/ytu2">

    <!-- Giriş Yapma Alanları -->
    <ScrollView
        android:id="@+id/scrollViewLogin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Giriş Yapma Kartı -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <!-- Giriş Yapma Kartı İçeriği -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="@drawable/login_card_background">

                    <!-- Giriş Yapma Başlık -->
                    <TextView
                        android:id="@+id/textViewLoginTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giriş Yap"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="16dp"/>

                    <!-- E-posta Giriş Alanı -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutLoginEmail"
                        style="@style/BlueTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textViewLoginTitle"
                        android:layout_marginTop="40dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextLoginEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="E-posta*"
                            android:inputType="textEmailAddress" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Şifre Giriş Alanı -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutLoginPassword"
                        style="@style/BlueTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textInputLayoutLoginEmail"
                        android:layout_marginTop="30dp">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/BlueTextInputLayoutStyle"

                            android:id="@+id/editTextLoginPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Şifre*"
                            android:inputType="textPassword" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Giriş Yap Butonu -->
                    <Button
                        android:id="@+id/buttonLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textInputLayoutLoginPassword"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/button_background"
                        android:text="Giriş Yap"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/TextChangeSignUpArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kayıt Ol"
                        android:textSize="20sp"
                        android:layout_below="@id/buttonLogin"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- Kayıt Alanları -->
    <ScrollView
        android:id="@+id/scrollViewRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <!-- Kayıt Kartı -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewRegister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Kayıt Kartı İçeriği -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="@drawable/login_card_background">

                    <!-- Kayıt Başlık -->
                    <TextView
                        android:id="@+id/textViewRegisterTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kayıt Ol"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="16dp"/>

                    <!-- İsim Giriş Alanı -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutName"
                        style="@style/BlueTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textViewRegisterTitle"
                        android:layout_marginTop="40dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="İsim*" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Soyisim Giriş Alanı -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutSurname"
                        style="@style/BlueTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textInputLayoutName"
                        android:layout_marginTop="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextSurname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Soyisim*" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Öğrenci Numarası Giriş Alanı -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutStudentID"
                        style="@style/BlueTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textInputLayoutSurname"
                        android:layout_marginTop="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextStudentID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Öğrenci Numarası*" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- E-posta Giriş Alanı -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutEmail"
                        style="@style/BlueTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textInputLayoutStudentID"
                        android:layout_marginTop="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="E-posta*"
                            android:inputType="textEmailAddress" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Şifre Giriş Alanı -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutPassword"
                        style="@style/BlueTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textInputLayoutEmail"
                        android:layout_marginTop="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Şifre*"
                            android:inputType="textPassword" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Kayıt Ol Butonu -->
                    <Button
                        android:id="@+id/buttonRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textInputLayoutPassword"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/button_background"
                        android:text="Kayıt Ol"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/TextChangeLogInArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Giriş Yap"
                        android:textSize="20sp"
                        android:layout_below="@id/buttonRegister"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
