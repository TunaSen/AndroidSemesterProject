<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".courses">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="COURSES"
            android:textAlignment="center"
            android:textSize="20dp" />


        <LinearLayout
            android:id="@+id/LayoutNewCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Diğer bileşenler -->

            <!-- Yeni Kurs Oluştur Butonu -->
            <Button
                android:id="@+id/buttonNewCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yeni Kurs Oluştur"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_background"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

        </LinearLayout>



        <!-- Üst kısımda tarih ve katılım filtreleme -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kurs Oluşturulma Tarihi:" />

            <!-- Tarih filtreleme için DatePicker veya benzeri bir bileşen eklenebilir -->

            <Spinner
                android:id="@+id/spinnerAttendance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/attendance_options" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/LayoutAllCourses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">







                <!-- Daha fazla kart eklemek için gerektiği kadar kopyalayabilirsiniz -->

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
