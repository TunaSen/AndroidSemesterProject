<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".Account">


    <!-- Profil Bilgileri -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profileCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/card_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Profil Resmi ve Bilgiler -->
            <LinearLayout
                android:id="@+id/profileInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Profil Resmi -->
                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/ytu2"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"/>

                <!-- Ad, Soyad ve Rol Bilgisi -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tuna Şen"
                        android:textColor="@color/primary_text_color"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding="4dp"/>

                    <TextView
                        android:id="@+id/textViewRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="Student"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- ID -->
                <TextView
                    android:id="@+id/textViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123456"
                    android:textColor="@color/primary_text_color"
                    android:textSize="16sp"
                    android:padding="4dp"/>

            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Kullanıcı Detayları -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/userDetailsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/card_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileCard">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <!-- Kullanıcı Detayları -->
            <LinearLayout
                android:id="@+id/userDetailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/IconMail"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:src="@drawable/mail" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="E-Mail">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextMail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:text=""
                            android:textColor="@color/secondary_text_color"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Switch -->

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/toggleMail"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:textColor="@color/black"

                        />
                </LinearLayout>


                <!-- Password -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/IconPassword"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:src="@drawable/passwordicon" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:text=""
                            android:textColor="@color/secondary_text_color"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Education Numarası -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/IconEducation"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:src="@drawable/education" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Education">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextEducation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:text=""
                            android:textColor="@color/secondary_text_color"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Sosyal Medya Hesapları -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/socialMediaCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/card_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userDetailsCard">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            >

            <!-- Sosyal Medya Hesapları -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/IconPhone"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/telephone"
                        android:padding="8dp"/>

                    <ImageView
                        android:id="@+id/IconWhatsapp"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/whataspp"
                        android:padding="8dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Telephone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextTel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/secondary_text_color"
                            android:textSize="16sp"
                            android:enabled="false" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Switch -->
                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/toggleTel"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:textColor="@color/black"

                        />
                </LinearLayout>


                <!-- Facebook Medya Hesabı -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/IconFacebook"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/facebook"
                        android:padding="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Facebook">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextFacebook"
                            android:layout_width="match_parent"
                            android:layout_height="49dp"
                            android:enabled="false"
                            android:text=""
                            android:textColor="@color/secondary_text_color"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Switch -->
                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/toggleFacebook"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:textColor="@color/black"

                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/IconInstagram"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/instagram"
                        android:padding="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Instagram">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextInstagram"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/secondary_text_color"
                            android:textSize="16sp"
                            android:enabled="false" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Switch -->
                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/toggleInstagram"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:textColor="@color/black"

                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/IconTwitter"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/x_twitter"
                        android:padding="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Twitter">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextTwitter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/secondary_text_color"
                            android:textSize="16sp"
                            android:enabled="false" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Switch -->
                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/toggleTwitter"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:textColor="@color/black"

                        />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Güncelle ve Sil Butonları -->
    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        >

        <!-- Güncelle Butonu -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:backgroundTint="@color/update_button_color"
            android:text="Güncelle"
            android:textColor="@color/primary_text_color"
            android:textSize="16sp" />

        <!-- Sil Butonu -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:backgroundTint="@color/delete_button_color"
            android:text="Sil"
            android:textColor="@color/primary_text_color"
            android:textSize="16sp" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
